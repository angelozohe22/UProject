<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.uproject">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".core.DulcekatApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_dulcekat"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_dulcekat_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.UProject">
        <activity android:name="com.example.uproject.ui.modules.pay.PayActivity"></activity>
        <activity android:name="com.example.uproject.ui.modules.home.products.ProductsActivity" />
        <activity android:name="com.example.uproject.ui.modules.aboutus.AboutUsActivity" />
        <activity android:name="com.example.uproject.ui.modules.contactus.ContactUsActivity" />
        <activity android:name="com.example.uproject.ui.modules.home.details.DetailsProductActivity" />
        <activity android:name="com.example.uproject.ui.modules.home.category.CategoryActivity" />
        <activity android:name="com.example.uproject.ui.modules.home.search.SearchActivity" />
        <activity android:name=".ui.modules.home.HomeActivity" />
        <activity
            android:name=".ui.launch.SplashActivity"
            android:theme="@style/SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.login.MainActivity" />
    </application>

</manifest>