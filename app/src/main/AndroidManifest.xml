<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.uproject">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".core.aplication.MyApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.UProject">
        <activity android:name=".ui.activities.home.products.ProductsActivity"></activity>
        <activity android:name=".ui.activities.home.aboutus.AboutUsActivity" />
        <activity android:name=".ui.activities.home.contactus.ContactUsActivity" />
        <activity android:name=".ui.activities.home.details.DetailsProductActivity" />
        <activity android:name=".ui.activities.home.category.CategoryActivity" />
        <activity android:name=".ui.activities.home.search.SearchActivity" />
        <activity android:name=".ui.activities.home.HomeActivity" />
        <activity
            android:name=".ui.activities.splash.SplashActivity"
            android:theme="@style/SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.activities.main.MainActivity" />
    </application>

</manifest>