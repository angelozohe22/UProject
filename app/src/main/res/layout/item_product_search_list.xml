<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/item_image_product_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:src="@drawable/ic_launcher_background"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/item_name_product_search"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:text="Mantequilla sin sal"
                android:textColor="@color/color_Gray_Web"
                android:textSize="18sp"
                android:fontFamily="@font/googlesans_medium"
                android:maxLines="1"
                android:ellipsize="end"
                app:layout_constraintLeft_toRightOf="@id/item_image_product_search"
                app:layout_constraintTop_toTopOf="@id/item_image_product_search"
                app:layout_constraintRight_toRightOf="parent"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/item_mark_product_search"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Sello de oro"
                android:textSize="18sp"
                android:textColor="@color/color_Gray_Web"
                android:fontFamily="@font/googlesans_medium"
                android:maxLines="1"
                android:ellipsize="end"
                app:layout_constraintLeft_toLeftOf="@id/item_name_product_search"
                app:layout_constraintRight_toRightOf="@id/item_name_product_search"
                app:layout_constraintTop_toBottomOf="@id/item_name_product_search"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/item_weight_product_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="12dp"
                android:text="1Kgram"
                android:textColor="@color/color_gray_gray"
                android:textSize="16sp"
                android:fontFamily="@font/googlesans_medium"
                android:maxLines="1"
                app:layout_constraintLeft_toRightOf="@id/item_image_product_search"
                app:layout_constraintBottom_toBottomOf="@id/item_image_product_search"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/item_real_price_product_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="S/ 7.65"
                android:textColor="@color/color_Uranian_Blue"
                android:textSize="20sp"
                android:fontFamily="@font/googlesans_bold"
                android:maxLines="1"
                app:layout_constraintRight_toRightOf="@id/item_mark_product_search"
                app:layout_constraintTop_toTopOf="@id/item_weight_product_search"
                app:layout_constraintBottom_toBottomOf="@id/item_weight_product_search"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>