<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.modules.home.details.DetailsProductActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_details_product_support"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        app:cardElevation="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/btn_back_details_product"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/ic_button_back"
                android:background="@drawable/background_button_back"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/btn_favorite_details_product"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:padding="10dp"
                android:visibility="gone"
                android:src="@drawable/avd_animation_heart_1"
                android:background="@drawable/background_button_back"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_details_product"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_marginTop="48dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/background_container"
        app:layout_constraintHeight_percent=".67"
        app:layout_constraintVertical_bias="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:id="@+id/view_support_discount_details"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="16dp"
                android:background="@drawable/background_discount"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_discount_details_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_White"
                android:textSize="14sp"
                android:fontFamily="@font/googlesans_medium"
                app:layout_constraintLeft_toLeftOf="@id/view_support_discount_details"
                app:layout_constraintRight_toRightOf="@id/view_support_discount_details"
                app:layout_constraintTop_toTopOf="@id/view_support_discount_details"
                app:layout_constraintBottom_toBottomOf="@id/view_support_discount_details"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_name_details_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="65dp"
                android:textSize="20sp"
                android:textColor="@color/color_Gray_Web"
                android:fontFamily="@font/googlesans_medium"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_mark_details_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:textColor="@color/color_Gray_Web"
                android:textSize="20sp"
                android:fontFamily="@font/googlesans_medium"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_name_details_product"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_weight_details_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="4dp"
                android:textColor="@color/color_gray_gray"
                android:textSize="18sp"
                android:fontFamily="@font/googlesans_medium"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_mark_details_product"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/title_from_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:text="Desde"
                android:textSize="16sp"
                android:textColor="@color/color_Gray_Web"
                android:fontFamily="@font/googlesans_medium"
                app:layout_constraintTop_toTopOf="@id/tv_name_details_product"
                app:layout_constraintBottom_toBottomOf="@id/tv_name_details_product"
                app:layout_constraintRight_toRightOf="parent"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_real_price_details_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/color_Gray_Web"
                android:fontFamily="@font/googlesans_medium"
                app:layout_constraintTop_toBottomOf="@id/title_from_details"
                app:layout_constraintRight_toRightOf="@id/title_from_details"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_discount_price_details_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/color_Uranian_Blue"
                android:fontFamily="@font/googlesans_medium"
                app:layout_constraintTop_toBottomOf="@id/tv_real_price_details_product"
                app:layout_constraintRight_toRightOf="@id/tv_real_price_details_product"/>

            <LinearLayout
                android:id="@+id/quantity_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:padding="6dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_weight_details_product">

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/btn_decrease_quantity"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="40dp"
                    android:src="@drawable/ic_dismiss"
                    android:background="@drawable/btn_corner_quantity"/>

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/btn_increase_quantity"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="6dp"
                    android:src="@drawable/ic_add"
                    android:background="@drawable/btn_corner_quantity"/>
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_quantity_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:textColor="@color/color_Gray_Web"
                android:textSize="14sp"
                android:fontFamily="@font/googlesans_medium"
                app:layout_constraintLeft_toLeftOf="@id/quantity_container"
                app:layout_constraintRight_toRightOf="@id/quantity_container"
                app:layout_constraintTop_toTopOf="@id/quantity_container"
                app:layout_constraintBottom_toBottomOf="@id/quantity_container"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/title_description_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:text="Descripción"
                android:textColor="@color/color_Gray_Web"
                android:textSize="18sp"
                android:fontFamily="@font/googlesans_bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/quantity_container"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_description_details_product"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:layout_marginTop="8dp"
                android:textColor="@color/color_Gray_Web"
                android:textSize="12sp"
                app:layout_constraintLeft_toLeftOf="@id/title_description_details"
                app:layout_constraintTop_toBottomOf="@id/title_description_details"
                app:layout_constraintRight_toRightOf="parent"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_add_bag_product"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:background="@drawable/btn_details_bag"
                android:text="Añadir a la bolsa"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:textColor="@color/color_White"
                android:fontFamily="@font/googlesans_bold"
                app:layout_constraintLeft_toLeftOf="@id/tv_description_details_product"
                app:layout_constraintRight_toRightOf="@id/tv_description_details_product"
                app:layout_constraintTop_toBottomOf="@id/tv_description_details_product"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/title_other_products_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="16dp"
                android:text="Otros productos"
                android:textColor="@color/color_Gray_Web"
                android:textSize="18sp"
                android:fontFamily="@font/googlesans_bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btn_add_bag_product"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_other_products"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintLeft_toLeftOf="@id/title_other_products_details"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/title_other_products_details"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>