<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="tittleFragments">
        <item name="android:fontFamily">@font/grandhotel_regular</item>
        <item name="android:textColor">@color/color_Red_Salsa</item>
        <item name="android:textSize">@dimen/size_tittle_fragments</item>
        <item name="android:shadowColor">@color/color_Silver</item>
        <item name="android:shadowDy">3</item>
        <item name="android:shadowRadius">8</item>
    </style>

    <style name="slogan">
        <item name="android:fontFamily">@font/grandhotel_regular</item>
        <item name="android:textColor">@color/color_Antique_Brass</item>
        <item name="android:textSize">@dimen/size_slogan</item>
        <item name="android:shadowColor">@color/color_Silver</item>
        <item name="android:shadowDy">3</item>
        <item name="android:shadowRadius">8</item>
    </style>

    <style name="btnCorner">
        <item name="android:layout_width">@dimen/width_button</item>
        <item name="android:layout_height">@dimen/height_button</item>
        <item name="android:elevation" tools:targetApi="lollipop">@dimen/elevation_button</item>
        <item name="android:background">@drawable/btn_corner</item>
        <item name="android:fontFamily">@font/googlesans_regular</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/color_White</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="btnCornerOutline">
        <item name="android:layout_width">@dimen/width_button</item>
        <item name="android:layout_height">@dimen/height_button</item>
        <item name="android:elevation" tools:targetApi="lollipop">@dimen/elevation_button</item>
        <item name="android:background">@drawable/btn_corner_outline</item>
        <item name="android:fontFamily">@font/googlesans_regular</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/color_Baby_Blue_Eyes</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>


</resources>